<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_nav_graph"
    app:startDestination="@id/splashScreenFragment">
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.somoni.presenetation.uisetting.FlowSettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_flow_settings" />
    <fragment
        android:id="@+id/nav_main"
        android:name="com.example.somoni.presenetation.uimain.FlowMainFragment"
        android:label="Main"
        tools:layout="@layout/flow_main_fragment" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.somoni.presenetation.screensplash.SplashScreenFragment"
        android:label="SplashScreenFragment"
        tools:layout="@layout/fragment_screen_layout"
        >
        <action
            android:id="@+id/splash_screenFragment_to_nav_settings"
            app:popUpTo="@id/base_nav_graph"
            app:popUpToInclusive="true"
            app:destination="@id/nav_settings" />
        <action
            android:id="@+id/splash_ScreenFragment_to_nav_main"
            app:popUpTo="@id/base_nav_graph"
            app:popUpToInclusive="true"
            app:destination="@id/nav_main" />
    </fragment>
</navigation>